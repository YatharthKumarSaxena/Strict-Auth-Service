# 🌐 Custom Auth Service - Example Environment File
# All variables are expected to be interpreted as strings

# ------------------ 🔌 Server --------------------
PORT_NUMBER=8040

# ------------------ 🐘 PostgreSQL -------------------
# 🌐 Public DB (User Auth)
PUBLIC_DB_NAME=strict_auth_service_db
PUBLIC_DB_URL=postgresql://strict_auth:StrongPass!123@localhost:5432/strict_auth_service_db?schema=public

# 🔐 Private DB (Admin Only)
PRIVATE_DB_NAME=admin_private_db
PRIVATE_DB_URL=postgresql://strict_admin:AdminStrong@localhost:5432/admin_private_db?schema=secure

# ------------------ 🔐 JWT -----------------------
ACCESS_TOKEN_SECRET_CODE=your_access_token_secret_here
ACCESS_TOKEN_EXPIRY=900     # in seconds (15 minutes)

# ------------------ 🔑 Bcrypt --------------------
SALT=12

# ------------------ 🛡 Admin User ----------------
ADMIN_NAME=admin_name
ADMIN_COUNTRY_CODE=91
ADMIN_NUMBER=admin_phone_number
ADMIN_FULL_PHONE_NUMBER=+91xxxxxxxxxx
ADMIN_EMAIL_ID=admin@example.com
ADMIN_PASSWORD=hashed_password_here
ADMIN_USER_ID=100000

# ------------------ 🏗 Infrastructure ------------
IP_ADDRESS_CODE=1
USER_REGISTRATION_CAPACITY=100000

# ------------------ 🍪 Cookie Config -------------
COOKIE_HTTP_ONLY=false        # true in prod, false in dev
COOKIE_SECURE=false           # true in prod (HTTPS only), false in dev
COOKIE_SAME_SITE=Strict
COOKIE_DOMAIN=localhost

# ------------------ 💻 Device Info ----------------
DEVICE_UUID=your_device_uuid
DEVICE_TYPE=LAPTOP
DEVICE_NAME=your_device_name

# ------------------ 🧼 Auth Logs Cleanup Config ---
AUTH_LOG_CLEANUP_CRON=0 5 * * 0
AUTH_LOG_CLEANUP_TIMEZONE=Asia/Kolkata
AUTH_LOG_RETENTION_DAYS=90

# ------------------ 🧹 User Cleanup Config --------
USER_CLEANUP_CRON=0 3 * * 0
USER_CLEANUP_TIMEZONE=Asia/Kolkata
USER_RETENTION_DAYS=60

# ------------------ 🌐 Environment ---------------
NODE_ENV=development
